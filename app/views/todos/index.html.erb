<h1>Задачи</h1>
<% @projects.each do |project| %>
  <h3 style="text-transform:uppercase" ><%= project.title %></h3>
  <ul>
  <% project.todos.each do |todo| %>
    <li><%= todo.text %></li>
  <% end %>
  </ul>
<% end %>

<%= image_submit_tag "addTodoIcon.png", :class => "showing_btn" %>

<div class="formDiv" style="display:none">
  <h2 style="text-transform:uppercase" > Новая задача </h2>
  <%= form_for @todo, url: {controller: "todos", action: "create"}, html: {:id => "new_todo_form"} do |f| %>
  <p><%= f.text_field :text, :placeholder => "Название задачи..." %></p>
  <p><%= f.collection_select(:project_id, Project.all, :id, :title) %></p>
  <%= link_to "ОТМЕНА", "", :class => "hiding_btn" %>
  <%= link_to "OK", "", :class => "submit_link" %>
  <% end %>
</div>
